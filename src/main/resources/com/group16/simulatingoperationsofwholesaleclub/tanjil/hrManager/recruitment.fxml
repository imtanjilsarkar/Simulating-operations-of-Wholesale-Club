<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F9FAFB;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.hrManager.controller.RecruitmentController">

    <!-- Header -->
    <Label layoutX="303.0" layoutY="42.0" style="-fx-font-size: 22px; -fx-text-fill: #0078D7; -fx-font-weight: bold;" text="Recruit New Employee" />

    <!-- Divider Line -->
    <Label layoutX="150.0" layoutY="74.0" style="-fx-border-color: #0078D7; -fx-border-width: 0 0 2 0; -fx-pref-width: 600;" text="" />

    <!-- Form Area -->
    <GridPane hgap="20" layoutX="260.0" layoutY="120.0" vgap="15">

        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Full Name:" />
        <TextField fx:id="txtFullName" prefWidth="300.0" promptText="Enter full name" />

        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Email:" GridPane.rowIndex="1" />
        <TextField fx:id="txtEmail" prefWidth="300.0" promptText="Enter email" GridPane.rowIndex="1" />

        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Phone:" GridPane.rowIndex="2" />
