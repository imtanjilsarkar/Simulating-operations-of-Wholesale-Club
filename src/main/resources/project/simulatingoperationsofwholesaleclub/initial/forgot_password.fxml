<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="579.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.simulatingoperationsofwholesaleclub.initial.ForgotPasswordController">

    <!-- Title -->
    <Label layoutX="274.0" layoutY="80.0" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0078D7;" text="Forgot Password?" />

    <!-- Subtitle -->
    <Label layoutX="259.0" layoutY="120.0" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Enter your email to reset your password" />

    <!-- Divider Line -->
    <Line endX="360.0" layoutX="220.0" layoutY="150.0" startX="0.0" stroke="#0078D7" strokeWidth="2.0" />

    <!-- Email -->
    <Label layoutX="200.0" layoutY="200.0" style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Email" />
    <TextField fx:id="emailField" layoutX="200.0" layoutY="225.0" prefWidth="400.0" promptText="Enter your registered email" />

    <!-- New Password -->
    <Label layoutX="200.0" layoutY="270.0" style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="New Password" />
    <PasswordField fx:id="newPasswordField" layoutX="200.0" layoutY="295.0" prefWidth="400.0" promptText="Enter new password" />

    <!-- Confirm Password -->
    <Label layoutX="200.0" layoutY="340.0" style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Confirm Password" />
    <PasswordField fx:id="confirmPasswordField" layoutX="200.0" layoutY="365.0" prefWidth="400.0" promptText="Re-enter new password" />

    <!-- Reset Button -->
    <Button layoutX="200.0" layoutY="420.0" onAction="#handleResetPassword" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;" text="Reset Password" />

    <!-- Back Button -->
    <Button layoutX="200.0" layoutY="470.0" onAction="#handleBackToLogin" prefHeight="35.0" prefWidth="400.0" style="-fx-background-color: transparent; -fx-border-color: #0078D7; -fx-border-width: 1; -fx-text-fill: #0078D7; -fx-font-size: 14px; -fx-background-radius: 8;" text="Back to Login" />

</AnchorPane>
