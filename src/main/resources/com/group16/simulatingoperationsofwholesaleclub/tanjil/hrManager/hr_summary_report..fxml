<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.hrManager.controller.HRReportController">

    <!-- Title -->
    <Label layoutX="250.0" layoutY="20.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="HR Summary Report" />

    <!-- TableView -->
    <TableView fx:id="reportTable" layoutX="50.0" layoutY="70.0" prefHeight="350.0" prefWidth="700.0">

        <!-- Columns -->
        <columns>
            <TableColumn fx:id="employeeColumn" prefWidth="150" text="Employee" />
            <TableColumn fx:id="departmentColumn" prefWidth="150" text="Department" />
            <TableColumn fx:id="attendanceColumn" prefWidth="100" text="Attendance" />
            <TableColumn fx:id="leaveColumn" prefWidth="100" text="Leaves" />
            <TableColumn fx:id="shiftColumn" prefWidth="100" text="Shift" />
            <TableColumn fx:id="payrollColumn" prefWidth="100" text="Payroll" />
        </columns>
    </TableView>

    <!-- Refresh Button -->
    <Button layoutX="350.0" layoutY="440.0" onAction="#handleRefreshReport" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Refresh" />
