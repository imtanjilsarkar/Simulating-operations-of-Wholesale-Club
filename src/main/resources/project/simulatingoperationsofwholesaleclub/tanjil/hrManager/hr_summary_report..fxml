<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.tanjil.hrManager.controller.HRReportController">

    <!-- Title -->
    <Label layoutX="250.0" layoutY="20.0"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"
           text="HR Summary Report"/>

    <!-- TableView -->
    <TableView fx:id="reportTable"
               layoutX="50.0" layoutY="70.0"
               prefWidth="700.0" prefHeight="350.0">

        <!-- Columns -->
        <columns>
            <TableColumn fx:id="employeeColumn" text="Employee" prefWidth="150"/>
            <TableColumn fx:id="departmentColumn" text="Department" prefWidth="150"/>
            <TableColumn fx:id="attendanceColumn" text="Attendance" prefWidth="100"/>
            <TableColumn fx:id="leaveColumn" text="Leaves" prefWidth="100"/>
            <TableColumn fx:id="shiftColumn" text="Shift" prefWidth="100"/>
            <TableColumn fx:id="payrollColumn" text="Payroll" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Refresh Button -->
    <Button layoutX="350.0" layoutY="440.0"
            prefWidth="100.0" prefHeight="30.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white;"
            text="Refresh"
            onAction="#handleRefreshReport"/>
</AnchorPane>
