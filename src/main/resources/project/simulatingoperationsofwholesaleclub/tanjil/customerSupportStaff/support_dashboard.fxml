<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.SupportDashboardController">

    <!-- Title -->
    <Label layoutX="250.0" layoutY="50.0"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="Customer Support Dashboard" />

    <!-- Decorative Line -->
    <Line layoutX="150.0" layoutY="90.0" startX="0.0" endX="500.0"
          stroke="#0078D7" strokeWidth="2.0" />

    <!-- Buttons -->
    <Button layoutX="150.0" layoutY="130.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Add Complaint"
            onAction="#handleAddComplaint" />

    <Button layoutX="450.0" layoutY="130.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Update Complaint"
            onAction="#handleUpdateComplaint" />

    <Button layoutX="150.0" layoutY="200.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Close Complaint"
            onAction="#handleCloseComplaint" />

    <Button layoutX="450.0" layoutY="200.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Order Status"
            onAction="#handleOrderStatus" />

    <Button layoutX="150.0" layoutY="270.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="New Membership"
            onAction="#handleNewMembership" />

    <Button layoutX="450.0" layoutY="270.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Update Customer"
            onAction="#handleUpdateCustomer" />

    <Button layoutX="150.0" layoutY="340.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Feedback"
            onAction="#handleFeedback" />

    <Button layoutX="450.0" layoutY="340.0"
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            text="Support Report"
            onAction="#handleSupportReport" />

    <!-- Footer -->
    <Label layoutX="280.0" layoutY="460.0"
           style="-fx-font-size: 12px; -fx-text-fill: #999999;"
           text="Â© 2025 Customer Support Staff" />

</AnchorPane>
