<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.UpdateCustomerController">

    <!-- Title -->
    <Label layoutX="200.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;" text="Update Customer Details" />

    <!-- Customer ID -->
    <Label layoutX="100.0" layoutY="80.0" text="Customer ID:" />
    <TextField fx:id="txtCustomerID" layoutX="220.0" layoutY="75.0" prefWidth="250.0" />

    <!-- Full Name -->
    <Label layoutX="100.0" layoutY="130.0" text="Full Name:" />
    <TextField fx:id="txtFullName" layoutX="220.0" layoutY="125.0" prefWidth="250.0" />

    <!-- Username -->
    <Label layoutX="100.0" layoutY="180.0" text="Username:" />
    <TextField fx:id="txtUsername" layoutX="220.0" layoutY="175.0" prefWidth="250.0" />

    <!-- Email -->
    <Label layoutX="100.0" layoutY="230.0" text="Email:" />
    <TextField fx:id="txtEmail" layoutX="220.0" layoutY="225.0" prefWidth="250.0" />

    <!-- Phone Number -->
    <Label layoutX="100.0" layoutY="280.0" text="Phone:" />
    <TextField fx:id="txtPhone" layoutX="220.0" layoutY="275.0" prefWidth="250.0" />

    <!-- Update Button -->
    <Button layoutX="250.0" layoutY="354.0" onAction="#handleUpdate" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;" text="Update" />
   <Button layoutX="14.0" layoutY="359.0" onAction="#handleBack" prefHeight="6.0" prefWidth="56.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;" text="Back" />

</AnchorPane>
