<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F9FAFB;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.simulatingoperationsofwholesaleclub.tanjil.hrManager.controller.RemoveEmployeeController">

    <!-- Header -->
    <Label layoutX="354.0" layoutY="38.0" style="-fx-font-size: 22px; -fx-text-fill: #0078D7; -fx-font-weight: bold;" text="Remove Employee" />

    <!-- Divider Line -->
    <Label layoutX="150.0" layoutY="80.0" style="-fx-border-color: #0078D7; -fx-border-width: 0 0 2 0; -fx-pref-width: 600;" text="" />

    <!-- Search Field -->
    <Label layoutX="160.0" layoutY="118.0" style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Search by Employee ID or Name:" />
    <TextField fx:id="txtSearch" layoutX="368.0" layoutY="115.0" prefWidth="300.0" promptText="Enter ID or Name" />

    <Button layoutX="678.0" layoutY="115.0" onAction="#handleSearch" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Search" />

    <!-- Employee Table -->
    <TableView fx:id="employeeTable" layoutX="150.0" layoutY="160.0" prefHeight="320.0" prefWidth="620.0">
        <columns>
            <TableColumn fx:id="colID" prefWidth="100" text="Employee ID" />
            <TableColumn fx:id="colName" prefWidth="150" text="Full Name" />
            <TableColumn fx:id="colDepartment" prefWidth="150" text="Department" />
            <TableColumn fx:id="colPosition" prefWidth="150" text="Position" />
            <TableColumn fx:id="colAction" prefWidth="68.0" text="Action" />
        </columns>
    </TableView>

    <!-- Remove Button -->
    <Button layoutX="380.0" layoutY="502.0" onAction="#handleRemoveEmployee" prefWidth="140" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Remove Selected" />

</AnchorPane>
