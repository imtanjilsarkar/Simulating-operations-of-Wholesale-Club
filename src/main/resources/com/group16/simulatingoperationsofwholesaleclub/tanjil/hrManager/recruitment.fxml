    </GridPane>

    <!-- Buttons -->
    <Button fx:id="btnAddEmployee" layoutX="260.0" layoutY="400.0" onAction="#handleAddEmployee" prefWidth="140" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Add Employee" />

    <Button fx:id="btnClear" layoutX="420.0" layoutY="400.0" onAction="#handleClearForm" prefWidth="140" style="-fx-background-color: white; -fx-border-color: #0078D7; -fx-border-width: 2; -fx-text-fill: #0078D7; -fx-font-weight: bold; -fx-background-radius: 6;" text="Clear" />
