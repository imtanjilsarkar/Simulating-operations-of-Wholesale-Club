<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.initial.InitialController">

    <!-- Title -->
    <Label layoutX="150.0" layoutY="100.0"
           prefWidth="500.0"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="HR &amp; Support Management System"
           alignment="CENTER" />

    <!-- Tagline -->
    <Label layoutX="150.0" layoutY="150.0"
           prefWidth="500.0"
           style="-fx-font-size: 14px; -fx-text-fill: #666666;"
           text="Streamlining HR &amp; Customer Support Operations"
           alignment="CENTER" />

    <!-- Decorative Line -->
    <Line layoutX="180.0" layoutY="200.0" startX="0.0" endX="440.0"
          stroke="#0078D7" strokeWidth="2.0" />

    <!-- Login Button -->
    <Button layoutX="300.0" layoutY="250.0"
            prefWidth="200.0" prefHeight="45.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
            text="Login"
            onAction="#handleLogin" />

    <!-- Sign Up Button -->
    <Button layoutX="300.0" layoutY="320.0"
            prefWidth="200.0" prefHeight="45.0"
            style="-fx-background-color: white; -fx-border-color: #0078D7; -fx-border-width: 2; -fx-text-fill: #0078D7; -fx-font-size: 16px; -fx-background-radius: 8;"
            text="Sign Up"
            onAction="#handleSignup" />

    <!-- Footer -->
    <Label layoutX="0.0" layoutY="460.0"
           prefWidth="800.0"
           style="-fx-font-size: 12px; -fx-text-fill: #999999;"
           text="Â© 2025 HR &amp; Support Management System"
           alignment="CENTER" />

</AnchorPane>
