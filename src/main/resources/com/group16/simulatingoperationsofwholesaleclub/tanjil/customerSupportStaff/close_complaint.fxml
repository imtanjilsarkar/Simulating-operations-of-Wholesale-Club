<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.CloseComplaintController">

    <!-- Title -->
    <Label layoutX="200.0" layoutY="40.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="Close Complaint" />

    <!-- Search Complaint by ID -->
    <Label layoutX="100.0" layoutY="120.0"
           text="Complaint ID:" />
    <TextField layoutX="250.0" layoutY="115.0"
               prefWidth="200.0" fx:id="complaintIdField" />
    <Button layoutX="470.0" layoutY="115.0"
            prefWidth="80.0"
            text="Search"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;"
            onAction="#handleSearchComplaint" />

    <!-- Complaint Details -->
    <Label layoutX="100.0" layoutY="180.0"
           text="Complaint Title:" />
    <TextField layoutX="250.0" layoutY="175.0"
               prefWidth="300.0" fx:id="complaintTitleField" editable="false" />

    <Label layoutX="100.0" layoutY="220.0"
           text="Customer Name:" />
    <TextField layoutX="250.0" layoutY="215.0"
               prefWidth="300.0" fx:id="customerNameField" editable="false" />

    <!-- Close Button -->
    <Button layoutX="200.0" layoutY="300.0"
            prefWidth="120.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;"
            text="Close Complaint"
            onAction="#handleCloseComplaint" />

    <!-- Cancel Button -->
    <Button layoutX="360.0" layoutY="300.0"
            prefWidth="120.0" prefHeight="40.0"
            style="-fx-background-color: white; -fx-border-color: #0078D7; -fx-text-fill: #0078D7; -fx-background-radius: 8;"
            text="Cancel"
            onAction="#handleCancel" />

</AnchorPane>
