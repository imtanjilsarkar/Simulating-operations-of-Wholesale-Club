<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.SupportReportController">

    <!-- Title -->
    <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;" text="Customer Support Reports" />

    <!-- Table View -->
    <TableView fx:id="tblReports" layoutX="50.0" layoutY="70.0" prefHeight="350.0" prefWidth="700.0">

        <!-- Columns -->
        <columns>
            <TableColumn fx:id="colReportID" prefWidth="80.0" text="Report ID" />
            <TableColumn fx:id="colCustomerName" prefWidth="150.0" text="Customer Name" />
            <TableColumn fx:id="colComplaintType" prefWidth="150.0" text="Complaint Type" />
            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="colDate" prefWidth="120.0" text="Date Submitted" />
            <TableColumn fx:id="colRemarks" prefWidth="100.0" text="Remarks" />
        </columns>

    </TableView>

    <!-- Refresh Button -->
    <Button layoutX="350.0" layoutY="453.0" onAction="#handleRefresh" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;" text="Refresh" />
   <Button layoutX="14.0" layoutY="458.0" onAction="#handleBack" prefHeight="17.0" prefWidth="46.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;" text="Back" />

</AnchorPane>
