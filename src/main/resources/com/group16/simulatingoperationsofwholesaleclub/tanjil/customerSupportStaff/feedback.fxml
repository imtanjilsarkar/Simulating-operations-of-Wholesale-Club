<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.FeedbackController">

    <!-- Title -->
    <Label layoutX="200.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;" text="Customer Feedback" />

    <!-- Customer Name -->
    <Label layoutX="100.0" layoutY="80.0" text="Customer Name:" />
    <TextArea fx:id="txtCustomerName" layoutX="220.0" layoutY="70.0" prefHeight="30.0" prefWidth="250.0" />

    <!-- Feedback -->
    <Label layoutX="100.0" layoutY="130.0" text="Feedback:" />
    <TextArea fx:id="txtFeedback" layoutX="220.0" layoutY="120.0" prefHeight="150.0" prefWidth="250.0" wrapText="true" />

    <!-- Submit Button -->
    <Button layoutX="250.0" layoutY="300.0" onAction="#handleSubmit" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;" text="Submit" />
   <Button layoutX="14.0" layoutY="367.0" onAction="#handleBack" prefHeight="18.0" prefWidth="54.0" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;" text="Back" />

</AnchorPane>
