        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Department:" GridPane.rowIndex="3" />
        <TextField fx:id="txtDepartment" prefWidth="300.0" promptText="Enter department" GridPane.rowIndex="3" />

        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px;" text="Position:" GridPane.rowIndex="4" />
        <TextField fx:id="txtPosition" prefWidth="300.0" promptText="Enter position" GridPane.rowIndex="4" />
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints maxHeight="25.599999999999994" minHeight="25.599999999999994" prefHeight="25.599999999999994" />
         <RowConstraints maxHeight="25.60000000000001" minHeight="25.60000000000001" prefHeight="25.60000000000001" />
         <RowConstraints />
