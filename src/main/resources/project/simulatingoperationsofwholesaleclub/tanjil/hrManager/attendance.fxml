<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.tanjil.hrManager.controller.AttendanceController">

    <Label layoutX="300.0" layoutY="20.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="Employee Attendance" />

    <TableView layoutX="50.0" layoutY="70.0" prefWidth="700.0" prefHeight="350.0" fx:id="attendanceTable">
        <columns>
            <TableColumn text="Employee Name" prefWidth="150.0" fx:id="colEmployeeName" />
            <TableColumn text="Date" prefWidth="120.0" fx:id="colDate" />
            <TableColumn text="Check-In" prefWidth="120.0" fx:id="colCheckIn" />
            <TableColumn text="Check-Out" prefWidth="120.0" fx:id="colCheckOut" />
            <TableColumn text="Status" prefWidth="100.0" fx:id="colStatus" />
        </columns>
    </TableView>

    <Button layoutX="300.0" layoutY="440.0" prefWidth="200.0" prefHeight="40.0"
            text="Mark Attendance"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            onAction="#handleMarkAttendance" />

</AnchorPane>
