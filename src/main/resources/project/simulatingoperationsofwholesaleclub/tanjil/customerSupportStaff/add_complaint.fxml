<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.AddComplaintController">

    <!-- Title -->
    <Label layoutX="280.0" layoutY="40.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="Add New Complaint" />

    <!-- Customer Name -->
    <Label layoutX="150.0" layoutY="100.0"
           text="Customer Name:" />
    <TextField layoutX="300.0" layoutY="95.0"
               prefWidth="300.0" fx:id="customerNameField" />

    <!-- Complaint Title -->
    <Label layoutX="150.0" layoutY="150.0"
           text="Complaint Title:" />
    <TextField layoutX="300.0" layoutY="145.0"
               prefWidth="300.0" fx:id="complaintTitleField" />

    <!-- Complaint Description -->
    <Label layoutX="150.0" layoutY="200.0"
           text="Description:" />
    <TextArea layoutX="300.0" layoutY="195.0"
              prefWidth="300.0" prefHeight="150.0"
              fx:id="descriptionArea" />

    <!-- Submit Button -->
    <Button layoutX="300.0" layoutY="370.0"
            prefWidth="120.0" prefHeight="40.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;"
            text="Submit"
            onAction="#handleSubmitComplaint" />

    <!-- Cancel Button -->
    <Button layoutX="480.0" layoutY="370.0"
            prefWidth="120.0" prefHeight="40.0"
            style="-fx-background-color: white; -fx-border-color: #0078D7; -fx-text-fill: #0078D7; -fx-background-radius: 8;"
            text="Cancel"
            onAction="#handleCancel" />

</AnchorPane>
