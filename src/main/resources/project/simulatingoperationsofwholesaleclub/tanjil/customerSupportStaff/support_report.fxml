<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.tanjil.customerSupportStaff.controller.SupportReportController">

    <!-- Title -->
    <Label layoutX="300.0" layoutY="20.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="Customer Support Reports" />

    <!-- Table View -->
    <TableView layoutX="50.0" layoutY="70.0" prefWidth="700.0" prefHeight="350.0" fx:id="tblReports">

        <!-- Columns -->
        <columns>
            <TableColumn text="Report ID" prefWidth="80.0" fx:id="colReportID"/>
            <TableColumn text="Customer Name" prefWidth="150.0" fx:id="colCustomerName"/>
            <TableColumn text="Complaint Type" prefWidth="150.0" fx:id="colComplaintType"/>
            <TableColumn text="Status" prefWidth="100.0" fx:id="colStatus"/>
            <TableColumn text="Date Submitted" prefWidth="120.0" fx:id="colDate"/>
            <TableColumn text="Remarks" prefWidth="100.0" fx:id="colRemarks"/>
        </columns>

    </TableView>

    <!-- Refresh Button -->
    <Button layoutX="350.0" layoutY="440.0"
            prefWidth="100.0" prefHeight="35.0"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;"
            text="Refresh"
            onAction="#handleRefresh" />

</AnchorPane>
