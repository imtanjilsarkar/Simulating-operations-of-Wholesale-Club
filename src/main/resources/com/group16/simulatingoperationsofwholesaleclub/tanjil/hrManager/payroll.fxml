<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group16.simulatingoperationsofwholesaleclub.tanjil.hrManager.controller.PayrollController">

    <Label layoutX="320.0" layoutY="20.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0078D7;"
           text="Employee Payroll" />

    <TableView layoutX="50.0" layoutY="70.0" prefWidth="700.0" prefHeight="350.0" fx:id="payrollTable">
        <columns>
            <TableColumn text="Employee Name" prefWidth="150.0" fx:id="colEmployeeName" />
            <TableColumn text="Position" prefWidth="120.0" fx:id="colPosition" />
            <TableColumn text="Salary" prefWidth="120.0" fx:id="colSalary" />
            <TableColumn text="Deductions" prefWidth="120.0" fx:id="colDeductions" />
            <TableColumn text="Net Pay" prefWidth="120.0" fx:id="colNetPay" />
        </columns>
    </TableView>

    <Button layoutX="300.0" layoutY="440.0" prefWidth="200.0" prefHeight="40.0"
            text="Generate Payroll"
            style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8;"
            onAction="#handleGeneratePayroll" />

</AnchorPane>
