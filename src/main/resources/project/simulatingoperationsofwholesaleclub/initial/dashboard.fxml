<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #f9f9f9;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.simulatingoperationsofwholesaleclub.initial.DashboardController">

    <!-- Header -->
    <HBox prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #0078D7;">
        <Label text="HR &amp; Support Management Dashboard"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"
               layoutX="20.0" layoutY="15.0" />
    </HBox>

    <!-- Sidebar -->
    <VBox layoutX="0.0" layoutY="60.0" prefWidth="200.0" prefHeight="540.0"
          style="-fx-background-color: #E6F0FA;">
        <Button text="Employee Management"
                prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-font-size: 15px;"
                onAction="#handleEmployee" />
        <Button text="Customer Support"
                prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-font-size: 15px;"
                onAction="#handleSupport" />
        <Button text="Reports"
                prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-font-size: 15px;"
                onAction="#handleReports" />
        <Button text="Logout"
                prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: red; -fx-font-size: 15px;"
                onAction="#handleLogout" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="200.0" layoutY="60.0" prefWidth="700.0" prefHeight="540.0"
                fx:id="contentArea"
                style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
        <Label layoutX="250.0" layoutY="230.0"
               style="-fx-font-size: 20px; -fx-text-fill: #333333;"
               text="Welcome to the Dashboard!" />
    </AnchorPane>

</AnchorPane>
